syntax on
filetype indent on
set clipboard=unnamedplus
set nocompatible
set showmode
set showcmd
set encoding=utf-8
set t_Co=256

set autoindent
set tabstop=4
set shiftwidth=4
set expandtab
set softtabstop=4

set number
set relativenumber
set textwidth=120
set wrap
set linebreak
set wrapmargin=2
set scrolloff=5

set showmatch
set hlsearch
set incsearch
set ignorecase

set spell spelllang=en_us
set nobackup
set noswapfile
set undofile
set undodir=~/.vim/.undo//
set autochdir
set history=1000
set autoread
set listchars=tab:»■,trail:■
set list
set wildmenu
set wildmode=longest:list,full

inoremap jj <Esc>
map J 5j
map K 5k



